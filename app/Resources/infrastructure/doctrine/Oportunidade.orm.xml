<?xml version="1.0" encoding="utf-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Domain\Model\Oportunidade">
        <id name="idOportunidade" type="integer">
            <generator strategy="IDENTITY" />
        </id>
        
        <field name="descricao" type="string" column="descricao" />
        <field name="periodoIncial" type="DateTime" column="periodo_inicial" />
        <field name="periodoFinal" type="DateTime" column="periodo_final" />
    </entity>
</doctrine-mapping>